          margin-left 0
          left 0
          background-image url('~images/sec_1_pad.png')
          background-size contain
          background-repeat no-repeat
      &.sec-2
        height 1773px
        background-image url('~images/sec_2.png')
        @media (max-width:1280px) and (min-width: 769px)
          width 1280px
          height 1158px
          margin-left -640px
          background-size 1280px 1158px
          .caption
            padding-top 70px
        @media (max-width:768px)
          width 100%
          padding-bottom 288.411458333%
          height auto
          margin-left 0
          left 0
          background-image url('~images/sec_2_pad.png')
          background-size contain
          background-repeat no-repeat

#feature
  .secs
    width 100%
    padding 110px 20px 110px
    .maxxis
      margin-bottom 35px
    .ny_maxxis
      margin-top 35px
    .sec
      width 50%
      min-width 640px
      float left
      font-size 18px
      .context
        line-height 28px
        width 570px
        &.arrow::before
          content url('~images/arrow.png')
          position relative
          left 0px
          top 2px
          margin 0 5px
      .h3
        font-size 24px
        font-weight bold
        // margin-top 25px
      .mb25
        margin-bottom 25px
    @media (max-width:768px)
      .maxxis
        width 225px
      .ny_maxxis
        width 95%
        max-width 322px
      .sec
        font-size 16px
        width 95%
        min-width 0
        // min-width 337px
        .context
          // width 100%
          width auto
        .h3
          font-size 20px

#timing    

.quick-links
