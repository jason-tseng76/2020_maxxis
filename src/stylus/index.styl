    &.sec-2
      width 1280px
      height 225px
      background-size 1280px 225px
      margin-left -640px
  @media (max-width:768px) and (min-width:376px)
    .caption
      display: none
    &.sec-1
    &.sec-2
      width 100%
      background-size contain
      background-repeat no-repeat
      margin-left 0
      height auto
      left 0
      &.sec-1
        padding-bottom 125.651041667%
        background-image url('~images/sec_1_banner_pad.png')
      &.sec-2
        padding-bottom 63.28%
        background-image url('~images/sec_2_banner_pad.png')
  @media (max-width:375px)
    .caption
      display: none
    &.sec-1
    &.sec-2
      width 100%
      background-size contain
      background-repeat no-repeat
      margin-left 0
      height auto
      left 0
      &.sec-1
        padding-bottom 427.2%
        background-image url('~images/sec_1_banner_m.png')
      &.sec-2
        padding-bottom 225.066666667%
        background-image url('~images/sec_2_banner_m.png')

